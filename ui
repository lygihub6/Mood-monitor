    <script>
        // Update date and time
        function updateDateTime() {
            const now = new Date();
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' };
            document.getElementById('dateTime').textContent = now.toLocaleDateString('en-US', options);
        }
        updateDateTime();
        setInterval(updateDateTime, 60000);

        // Slider functionality
        const motivationSlider = document.getElementById('motivationSlider');
        const focusSlider = document.getElementById('focusSlider');
        const stressSlider = document.getElementById('stressSlider');
        const flower = document.getElementById('flower');
        const flowerFace = document.getElementById('flowerFace');
        const petals = document.querySelectorAll('.petal');
        const stem = document.querySelector('.stem');

        function updateFlower() {
            const motivation = parseInt(motivationSlider.value);
            const focus = parseInt(focusSlider.value);
            const stress = parseInt(stressSlider.value);
            
            // Update display values
            document.getElementById('motivationValue').textContent = motivation;
            document.getElementById('motivationSliderValue').textContent = motivation;
            document.getElementById('focusValue').textContent = focus;
            document.getElementById('focusSliderValue').textContent = focus;
            document.getElementById('calmValue').textContent = 100 - stress;
            document.getElementById('stressSliderValue').textContent = stress;
            
            // Update flower size based on motivation
            const scale = 0.8 + (motivation / 100) * 0.6;
            flower.style.transform = `scale(${scale})`;
            
            // Update petal color based on stress
            const hue = 50 - (stress / 100) * 50; // From yellow to gray
            const saturation = 100 - (stress / 100) * 80;
            petals.forEach(petal => {
                petal.style.background = `linear-gradient(135deg, hsl(${hue}, ${saturation}%, 70%), hsl(${hue}, ${saturation}%, 60%))`;
            });
            
            // Update stem straightness based on focus
            const skew = (50 - focus) / 10;
            stem.style.transform = `translateX(-50%) skewX(${skew}deg)`;
            
            // Update face emoji based on overall mood
            const overallMood = (motivation + focus + (100 - stress)) / 3;
            if (overallMood > 70) {
                flowerFace.textContent = 'üòä';
            } else if (overallMood > 40) {
                flowerFace.textContent = 'üôÇ';
            } else {
                flowerFace.textContent = 'üòî';
            }
            
            // Update petal spread based on motivation
            petals.forEach((petal, index) => {
                const baseAngle = index * 45;
                const spread = 40 + (motivation / 100) * 20;
                petal.style.transform = `rotate(${baseAngle}deg) translateY(-${spread}px)`;
            });
        }

        motivationSlider.addEventListener('input', updateFlower);
        focusSlider.addEventListener('input', updateFlower);
        stressSlider.addEventListener('input', updateFlower);

        // Modal functionality
        function logMood() {
            const modalOverlay = document.getElementById('modalOverlay');
            const logModal = document.getElementById('logModal');
            modalOverlay.classList.add('active');
            logModal.classList.add('active');
            
            // Store mood data (in a real app, this would be sent to a server)
            const moodData = {
                timestamp: new Date().toISOString(),
                motivation: motivationSlider.value,
                focus: focusSlider.value,
                stress: stressSlider.value
            };
            console.log('Mood logged:', moodData);
            
            // You could store in localStorage
            const history = JSON.parse(localStorage.getItem('moodHistory') || '[]');
            history.push(moodData);
            localStorage.setItem('moodHistory', JSON.stringify(history));
        }

        function closeModal() {
            document.getElementById('modalOverlay').classList.remove('active');
            document.getElementById('logModal').classList.remove('active');
        }

        function clearLog() {
            motivationSlider.value = 50;
            focusSlider.value = 50;
            stressSlider.value = 50;
            updateFlower();
        }

        // Initialize flower
        updateFlower();

        // Add smooth color transitions on load
        setTimeout(() => {
            document.querySelectorAll('.petal').forEach(petal => {
                petal.style.transition = 'all 0.5s ease';
            });
        }, 100);
    </script>
</body>
